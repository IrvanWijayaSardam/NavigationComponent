<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.FragmentHome"
    android:background="#DFDDDD">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintInside"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/constraintInside"
            app:layout_constraintStart_toStartOf="@id/constraintInside"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#D1CACA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Home"
                        android:textSize="24dp"
                        />
                    <ImageView
                        android:layout_marginLeft="160dp"
                        android:id="@+id/ivProfile"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        />
                </LinearLayout>
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvHello"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Hello, Budi"
                    android:layout_marginTop="20dp"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_marginTop="50dp"
                    android:layout_width="260dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    app:cardCornerRadius="25dp"
                    >
                    <EditText
                        android:id="@+id/edtTahunLahir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:hint="Input Tahun Lahir"
                        android:inputType="number"
                        android:maxLength="4"
                        android:background="@color/white"
                        />
                </androidx.cardview.widget.CardView>


                <Button
                    android:id="@+id/btnHitung"
                    android:layout_width="240dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginEnd="31dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTint="@color/button_color"
                    android:text="Hitung"
                    android:textAllCaps="false"
                    android:textColor="@color/white"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>