<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".login.FragmentHello"
    android:background="#DFDDDD">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintInside"
        android:layout_width="350dp"
        android:layout_height="650dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="600dp"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toEndOf="@id/constraintInside"
            app:layout_constraintStart_toStartOf="@id/constraintInside"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="20dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#D1CACA"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:gravity="center"
                    android:id="@+id/tvHelloFHello"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Hello, "
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Umur Kamu"
                    android:layout_marginTop="20dp"
                    />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvUmur"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="30dp"
                    android:text="Tahun"
                    android:layout_marginTop="20dp"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>